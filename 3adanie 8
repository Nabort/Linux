#!/bin/bash
# Проверяем использование дискового пространства
usage=$(df / | grep / | awk '{ print $5 }' | sed 's/%//g')

# Уведомляем, если использование превышает 80%
if [ "$usage" -gt 80 ]; then
    echo "Использование дискового пространства: $usage%" | mail -s "Уведомление о дисковом пространстве" ваш_email@example.com
fi

# Записываем дату проверки и уровень использования в лог файл
echo "$(date): Использование дискового пространства: $usage%" >> disk_usage.log
